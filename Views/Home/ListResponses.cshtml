@{
    Layout = null;
}
<DOCTYPE html>
    <html>
    <head>
<title>Responses</title>
<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    </head>
    <body>
        <div class="container">
            <h2>Client Information</h2>

            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (COMP229_NewStudent.Models.GuestResponse r in Model)
                        {
                            <tr>
                                <td>@r.Name</td>
                                <td>@r.Email</td>
                                <td>@r.Phone</td>
                            </tr>
                        }
                    </tbody>
                </table>


                Information is not correct? Fill up the form again!!! <a asp-action="RsvpForm">
                    Go to enquiry form
                </a>
                <!-- Click<a asp-action="ListResponses">Here</a> to see who is coming!!!-->
                </>
            </div>
        </div>
    </body>
</html>
